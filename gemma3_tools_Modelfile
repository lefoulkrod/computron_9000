</tool_call>
{{- else }}
{{ .Content }}
{{- end }}
{{- if not $last }}<end_of_turn>
{{ end }}
{{- else if eq .Role "tool" }}
<start_of_turn>user
<tool_response>
{{ .Content }}
</tool_response><end_of_turn>
{{- /* Start model turn if this is the last message */ -}}
{{ if $last }}<start_of_turn>model
{{ end }}
{{- end }}
{{- end }}"""
